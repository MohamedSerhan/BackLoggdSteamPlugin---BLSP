{
  "name": "backloggdsteamplugin---blsp",
  "version": "1.0.0",
  "description": "Steam plugin that syncs the user's BackLoggd wishlist with Steam.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc -p api/Backloggd-API && tsc",
    "build:api": "tsc -p api/Backloggd-API",
    "build:src": "tsc",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:app\"",
    "dev:api": "nodemon ./api/Backloggd-API/src/app.ts",
    "dev:app": "node utils/delay.js 2000 && nodemon --env-file=.env index.js",
    "dev:new": "nodemon --watch src --ext ts --exec ts-node src/main.ts",
    "start": "npm run build && concurrently \"node api/Backloggd-API/dist/app.js\" \"node utils/delay.js 2000 && node index.js\"",
    "start:old": "npm run build && concurrently \"node api/Backloggd-API/dist/app.js\" \"node utils/delay.js 2000 && node index.js\"",
    "start:new": "npm run build:src && node dist/src/main.js",
    "start:api": "npm run build && node api/Backloggd-API/dist/app.js",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "clean": "rm -rf api/Backloggd-API/dist dist cache/* wishlistReport.html",
    "pup": "npx puppeteer install chrome && node ./utils/steamHandler.js"
  },
  "author": "Mohamed Serhan",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/MohamedSerhan/BackLoggdSteamPlugin---BLSP.git"
  },
  "keywords": [
    "steam",
    "backloggd",
    "wishlist",
    "sync",
    "gaming",
    "game-tracker"
  ],
  "engines": {
    "node": ">=20.6.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-levenshtein": "^3.0.0",
    "p-queue": "^6.6.2"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/express": "^4.17.21",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "puppeteer": "^23.11.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
