{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/__tests__/**",
    "node_modules/**",
    "dist/**",
    "cache/**",
    "docs-archive/**"
  ],
  "exec": "ts-node src/main.ts",
  "restartable": "rs",
  "colours": true,
  "verbose": true,
  "events": {
    "restart": "echo '\nğŸ”„ Restarting app...\n'",
    "start": "echo '\nâ–¶ï¸  Starting app...\n'"
  },
  "env": {
    "NODE_ENV": "development"
  }
}
